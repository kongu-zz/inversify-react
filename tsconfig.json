{
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": true,
        "removeComments": false,
        "noEmitHelpers": false,
        "experimentalDecorators": true,
        //        "experimentalAsyncFunctions": true,
        "jsx": "react",
        "noEmitOnError": true,
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "sourceMap": true
        //"outDir": "public"
        //"sourceRoot": ""
    },
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText":  false
    },
    "exclude": [
        "node_modules"
    ]
}
